{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "moduleNameMapper": {
        "src/(.*)$": "<rootDir>/../src/$1"
    },
    "testEnvironment": "node",
    "testRegex": "./e2e/.*\\.e2e-spec\\.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "verbose": true,
    "testTimeout": 1000000
}
