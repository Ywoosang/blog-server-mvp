{
    "name": "ywoosang-blog-server",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "seed:dev": "NODE_ENV=dev ts-node -r tsconfig-paths/register ./src/database/seeds/run-seed.ts",
        "seed:prod": "node dist/database/seeds/run-seed.js",
        "start": "nest start",
        "start:dev": "NODE_ENV=dev nest start --watch",
        "start:test": "NODE_ENV=test nest start --watch",
        "start:prod": "NODE_ENV=prod pm2 start dist/main.js",
        "start:debug": "nest start --debug --watch",
        "lint": "prettier --check 'src/**/*.ts' && eslint 'src/**/*.ts'",
        "lint:fix": "prettier --cache --write 'src/**/*.ts' && eslint --cache --fix 'src/**/*.ts'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:unit": "jest --config ./test/jest-unit.json",
        "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json --detectOpenHandles"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.540.0",
        "@nestjs/common": "^10.2.6",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.1.1",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.3.7",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "config": "^3.3.9",
        "dotenv": "^16.4.5",
        "faker": "^5.5.3",
        "handlebars": "^4.7.8",
        "multer": "^1.4.5-lts.1",
        "multer-s3": "^3.0.1",
        "mysql2": "^3.9.8",
        "nodemailer": "^6.9.7",
        "passport": "^0.6.0",
        "passport-github": "^1.1.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-jwt": "^4.0.1",
        "passport-kakao": "^1.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "typeorm": "^0.3.17",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.5",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.2.6",
        "@types/express": "^4.17.17",
        "@types/faker": "^6.6.9",
        "@types/jest": "^29.5.6",
        "@types/multer": "^1.4.11",
        "@types/multer-s3": "^3.0.3",
        "@types/node": "^20.3.1",
        "@types/nodemailer": "^6.4.14",
        "@types/passport-jwt": "^3.0.11",
        "@types/supertest": "^2.0.15",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-promise": "^6.1.1",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "source-map-support": "^0.5.21",
        "sqlite3": "^5.1.6",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleNameMapper": {
            "src/(.*)$": "<rootDir>/src/$1",
            "@root/(.*)$": "<rootDir>/../$1"
        },
        "rootDir": ".",
        "testRegex": "./e2e/.*\\.e2e-spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "verbose": true,
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
